{% if section.blocks.size > 0 %}
  <div class="careers-roles" id="careers-roles">
    <div class="page-width">

      {% if section.settings.title != blank %}
        <h2 class="h4 careers-roles__title">{{ section.settings.title }}</h2>
      {% endif %}

      <div class="careers-roles__holder">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'block' %}
              <div class="careers-role viewport-section js-careers-role">
                {% if block.settings.text != blank %}
                  <div class="careers-role__head js-careers-role__head">
                    <h3 class="careers-role__title">{{ block.settings.text }}</h3>
                    {% if block.settings.location != blank %}
                      <h4 class="careers-role__location">{{  block.settings.location }}</h4>
                    {% endif %}
                  </div>
                {% endif %}

                <div class="careers-role__slide js-careers-role__slide">
                  {{ block.settings.content }}
                  {% if section.settings.text_link != blank and block.settings.link != blank %}
                    <a href="{{ block.settings.link }}" target="_blank" class="careers-role__link">{{ section.settings.text_link }}</a>
                  {% endif %}
                </div>
              </div>
            {% when 'title' %}
            {% if block.settings.title != blank %}
              <h3 class="careers-role__heading viewport-section">{{ block.settings.title }}</h3>
            {% endif %}
          {% endcase %}

        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}


