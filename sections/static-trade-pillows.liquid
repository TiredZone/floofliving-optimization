{% if section.blocks.size > 0 %}
  <div class="description-pillows">
    <div class="page-width">

      {% if section.settings.title != blank %}
        <h2 class="h4 description-pillows__title">{{ section.settings.title }}</h2>
      {% endif %}

      <div class="description-pillows__holder">
        {% for block in section.blocks %}
          <div class="description-pillow__item">
            <h3 class="h5 description-pillow__title">{{ block.settings.text }}</h3>
            {{ block.settings.content }}
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
{% endif %}


{% schema %}
{
  "name": "Description of pillows",
  "class": "viewport-section",
  "max_blocks": 9,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
    "type": "block",
    "name": "Block",
    "settings": [
        {
          "id": "text",
          "label": "Text",
          "type": "text"
        },
        {
          "id": "content",
          "label": "Content",
          "type": "richtext"
        }
      ]
    }
  ]
}
{% endschema %}

