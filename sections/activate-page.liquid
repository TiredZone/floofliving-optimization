<div class="login-page">
  <div class="without-pad">
    <div class="login-page__flex">
      {% if section.settings.image != blank %}
      <div class="login-page__flex-left">
        {%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <div class="login-page__img">
            <img class="login-page__image lazyload"
            src="{{ section.settings.image | img_url: '50x50' }}"
            data-src="{{ img_url }}"
            data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
            data-aspectratio="{{ section.settings.image.aspect_ratio }}"
            data-sizes="auto"
            alt="{{ section.settings.image.alt | escape }}">
          </div>
      </div>
      {% endif %}
      <div class="login-page__flex-right">
        <h1>{{ 'customer.activate_account.title' | t }}</h1>
        <div class="login-page-info">
          {{ 'customer.activate_account.subtext' | t }}
        </div>
        {% form 'activate_customer_password', class: 'js-validation ' %}
          {{ form.errors | default_errors }}

          <div class="general-form__row">
            <label for="CustomerPassword" class="label-hidden">
              {{ 'customer.activate_account.password' | t }}
            </label>
            <input type="password"
              name="customer[password]"
              id="CustomerPassword"
              placeholder="{{ 'customer.activate_account.password' | t }}">
          </div>
          <div id="errors" class="error-message-password"></div>
          <div class="general-form__row">
            <label for="CustomerPasswordConfirmation" class="label-hidden">
              {{ 'customer.activate_account.password_confirm' | t }}
            </label>
            <input type="password"
              name="customer[password_confirmation]"
              id="CustomerPasswordConfirmation"
              placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
              <span class="error-message">{{ 'customer.activate_account.activate_error' | t }}</span>
          </div>

          <button type="submit" class="btn">{{ 'customer.activate_account.submit' | t }}</button>
          <button type="submit" class="btn btn--secondary" name="decline">{{ 'customer.activate_account.cancel' | t }}</button>
        {% endform %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Register Page",
  "class": "register-page__section-wrap",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image Background"
    }
  ]
}
{% endschema %}        
